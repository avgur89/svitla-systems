                    +e.col
                        +b.FORM.form.__form(action='URL')
                            .form-group.form-group_half
                                .form-group(data-anim-stagger='fade-top' data-prepare-anim data-mob-anim='group' data-mob-anim-stagger='fade-top')
                                    input.form-input(type='text' id='formName' autocomplete='off' required)
                                    label.form-input-label(for='formName'): span Your Name
                                    .help-block Error
                                .form-group(data-anim-stagger='fade-top' data-prepare-anim data-mob-anim='group' data-mob-anim-stagger='fade-top')
                                    input.form-input(type='text' id='formLastName' autocomplete='off' required)
                                    label.form-input-label(for='formLastName'): span Your Last Name
                                    .help-block Error
                            .form-group.form-group_half
                                .form-group(data-anim-stagger='fade-top' data-prepare-anim data-mob-anim='group' data-mob-anim-stagger='fade-top')
                                    input.form-input(type='mail' id='E-Mail' autocomplete='off' required)
                                    label.form-input-label(for='E-Mail'): span Your Email
                                    .help-block Error
                                .form-group.has-error(data-anim-stagger='fade-top' data-prepare-anim data-mob-anim='group' data-mob-anim-stagger='fade-top')
                                    input.form-input(type='tel' id='phoneNumber' autocomplete='off' required)
                                    label.form-input-label(for='phoneNumber'): span Your Phone Number
                                    .help-block Error
                            .form-group.form-group_half
                                .form-group.get_file(data-anim-stagger='fade-top' data-prepare-anim data-mob-anim='group' data-mob-anim-stagger='fade-top')
                                    input.form-input.input-file(type='file' id='Resume' autocomplete='off' required)
                                    label.form-input-label(for='Resume')
                                        .attach attach resume/cv
                                        span.loader 1 file is loaded
                                        span No file chosen
                                    .help-block Error
                                .form-group.get_file(data-anim-stagger='fade-top' data-prepare-anim data-mob-anim='group' data-mob-anim-stagger='fade-top')
                                    input.form-input.input-file(type='file' id='Cover' autocomplete='off')
                                    label.form-input-label(for='Cover')
                                        .attach attach cover letter
                                        span.loader 1 file is loaded
                                        span No file chosen
                                    .help-block Error
                            .form-group.form-group_with-btn(data-anim-stagger='fade-top' data-prepare-anim data-mob-anim='group' data-mob-anim-stagger='fade-top')
                                input.form-input(type='text' id='formName' autocomplete='off' required)
                                label.form-input-label(for='formName'): span Linked profile
                                .help-block Error
                            .form-group.form-group_submit-textarea(data-anim-stagger data-prepare-anim data-mob-anim='group' data-mob-anim-stagger='fade-top')
                                +b.BUTTON.btn(type='submit')
                                    +e.SPAN.bg
                                        +e.SPAN.bg-top
                                    +e.SPAN.bg
                                        +e.SPAN.bg-bot
                                    +e.SPAN.text apply

                        +e.form-ty
                            +e.form-ty-title.h4 Thank you! <br>We will contact very shortly.
                            p Your message is recieved. Svitla's sales manager of your region will contact you to discuss how we could be helpful.
        //end meet

        //begin meet
        +b.SECTION.meet_default.section_dark
            +e.container.container(data-anim='group' data-anim-delay='0.4')
                +e.H2.title_smaller Additional form
                +e.row
                    +e.col(data-anim-stagger='fade-top' data-mob-anim='group' data-mob-anim-stagger='fade-top')
