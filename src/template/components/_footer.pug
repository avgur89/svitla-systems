+b.FOOTER.footer
	+e.container.container
		+e.top
			+e.top-nav
				-navList = ['About us', 'How we work', 'Expertise', 'Portfolio', 'Blog', 'Careers', 'Contacts']
				ul
					each el in navList
						li
							a(href='' data-hover= el): span= el
			+e.top-controls
				-controlsList = ['fb', 'tw', 'linkedin', 'youtube']
				ul
					each el in controlsList
						li
							a(href='' target="_blank" rel="noopener nofollow"): +i(el)
		+e.bot
			+e.bot-left
				+e.SPAN.copy Â© 2017 Svitla
			+e.bot-right
				a.bot-link(href='') Legal and Privacy